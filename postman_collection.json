{
  "info": {
    "name": "FX Trading App API",
    "description": "Complete API collection for FX Trading App",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/verify",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Wallet",
      "item": [
        {
          "name": "Get All Wallets",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/wallet",
              "host": ["{{baseUrl}}"],
              "path": ["wallet"]
            }
          }
        },
        {
          "name": "Fund Wallet",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currency\": \"NGN\",\n  \"amount\": 50000,\n  \"reference\": \"fund-{{$timestamp}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/wallet/fund",
              "host": ["{{baseUrl}}"],
              "path": ["wallet", "fund"]
            }
          }
        }
      ]
    },
    {
      "name": "FX Rates",
      "item": [
        {
          "name": "Get All Rates",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/fx/rates",
              "host": ["{{baseUrl}}"],
              "path": ["fx", "rates"]
            }
          }
        },
        {
          "name": "Get Specific Rate",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/fx/rates/NGN/USD",
              "host": ["{{baseUrl}}"],
              "path": ["fx", "rates", "NGN", "USD"]
            }
          }
        }
      ]
    },
    {
      "name": "Trading",
      "item": [
        {
          "name": "Preview Conversion",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/trading/preview?from=NGN&to=USD&amount=10000",
              "host": ["{{baseUrl}}"],
              "path": ["trading", "preview"],
              "query": [
                {
                  "key": "from",
                  "value": "NGN"
                },
                {
                  "key": "to",
                  "value": "USD"
                },
                {
                  "key": "amount",
                  "value": "10000"
                }
              ]
            }
          }
        },
        {
          "name": "Convert Currency",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromCurrency\": \"NGN\",\n  \"toCurrency\": \"USD\",\n  \"amount\": 10000,\n  \"reference\": \"convert-{{$timestamp}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/trading/convert",
              "host": ["{{baseUrl}}"],
              "path": ["trading", "convert"]
            }
          }
        }
      ]
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Get Transaction History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["transactions"]
            }
          }
        }
      ]
    }
  ]
}
